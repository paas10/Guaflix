@model IEnumerable<Guaflix_1104017_1169317.Clases.Pelicula>

@{
    ViewBag.Title = "Eliminar Peliculas";
}

<body style="background-image: url('/Content/pop.jpg');">
</body>
<h2 style="color:lightskyblue">Eliminar Peliculas</h2>

<div style="background-color:black; border-radius:8px; opacity:0.6">
    <table class="table" style="color:white" align="center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                Año de Lanzamiento
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AniodeLanzamiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { URL = item.URL, Trailer = item.Trailer, Nombre = item.Nombre, Tipo = item.Tipo, Genero = item.Genero, Anio = item.AniodeLanzamiento })
                </td>
            </tr>
        }

    </table>
</div>
